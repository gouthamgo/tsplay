{
  "name": "tsplay",
  "version": "1.0.0",
  "description": "TypeScript playground for learning - watch and run TS files instantly",
  "type": "module",
  "bin": {
    "tsplay": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsup",
    "test": "node --test test/*.test.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "typescript",
    "playground",
    "learning",
    "watch"
  ],
  "author": "goutham",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gouthamgo/tsplay.git"
  },
  "bugs": {
    "url": "https://github.com/gouthamgo/tsplay/issues"
  },
  "homepage": "https://github.com/gouthamgo/tsplay#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "commander": "^12.0.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  }
}